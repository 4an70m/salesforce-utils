<aura:component description="rec_upd_RecordSaveTrigger"
                implements="flexipage:availableForRecordHome,force:hasRecordId,lightning:actionOverride"
                access="global">
                
    <aura:attribute name="targetFields" type="List" default="['Id']"/>
    <force:recordData aura:id="forceRecord"
                      layoutType="COMPACT"
                      recordId="{!v.recordId}"
                      targetFields="{!v.targetFields}"
                      recordUpdated="{!c.recordUpdated}" />

</aura:component>